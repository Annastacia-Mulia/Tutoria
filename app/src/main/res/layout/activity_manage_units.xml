<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <!-- Unit selection dropdown (Spinner) -->
    <Spinner
        android:id="@+id/unitSpinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="32dp" />

    <!-- Button to choose a PDF file -->
    <Button
        android:id="@+id/selectPdfButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Select PDF"
        android:layout_below="@id/unitSpinner"
        android:layout_marginTop="24dp"/>

    <!-- TextView to show selected file name -->
    <TextView
        android:id="@+id/selectedFileText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="No file selected"
        android:layout_below="@id/selectPdfButton"
        android:layout_marginTop="16dp"/>

    <!-- Button for uploading the selected PDF -->
    <Button
        android:id="@+id/uploadPdfButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Upload PDF"
        android:layout_below="@id/selectedFileText"
        android:layout_marginTop="24dp"/>

</RelativeLayout>
